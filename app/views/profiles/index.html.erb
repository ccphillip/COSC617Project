<h1>Listing profiles</h1>

<table>
  <tr>
    <th>User</th>
    <th>Website</th>
    <th>About me</th>
    <th>Location</th>
    <th>Interests</th>
    <th>Motivation</th>
    <th>Age</th>
    <th>Privacy level</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @profiles.each do |profile| %>
  <tr>
    <td><%= profile.user_id %></td>
    <td><%= profile.website %></td>
    <td><%= profile.about_me %></td>
    <td><%= profile.location %></td>
    <td><%= profile.interests %></td>
    <td><%= profile.motivation %></td>
    <td><%= profile.age %></td>
    <td><%= profile.privacy_level_id %></td>
    <td><%= link_to 'Show', profile %></td>
    <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
    <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

