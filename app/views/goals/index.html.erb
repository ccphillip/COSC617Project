<table>
	<% @goals.each do |goal|%>
	<tr>
		<td class = "list_description">
			<dl>
				<dt><%= goal.name%></dt>
				<dd><%= goal.description%></dd>
				<p><ss>Deadline: </ss><%= goal.date%>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
				<ss>Status: </ss><%= goal.status%>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
				<ss>Priority: </ss><%= goal.priority%></p>
			</dl>
		</td>
		<td class = "list_actions">
			<%= link_to 'Show', goal %><br/>
			<%= link_to 'Edit', edit_goal_path(goal) %><br/>
			<%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %>
		</td>
	</tr>
	<%end%>
</table>
